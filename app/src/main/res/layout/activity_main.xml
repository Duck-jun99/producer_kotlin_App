<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <Button
        android:id="@+id/btn_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가속도 센서값 전송"
        android:textSize="24sp"
        android:textColor = "#FFFFFFFF"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btn_post_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가속도 센서값 post 취소"
        android:textSize="24sp"
        android:textColor = "#FFFFFFFF"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_post_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최초 post 시각"
        android:textSize="24sp"
        android:textColor = "#FFFFFFFF"/>

    <TextView
        android:id="@+id/tv_post_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마지막 post 시각"
        android:textSize="24sp"
        android:textColor = "#FFFFFFFF"/>

</LinearLayout>